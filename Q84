#include <stdio.h>

int main() {
    char str[100];
    int i;

    // Read string (supports spaces)
    printf("Enter a lowercase string: ");
    fgets(str, sizeof(str), stdin);

    // Convert to uppercase manually
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 32;  // convert to uppercase
        }
    }

    // Print result
    printf("Uppercase string: %s\n", str);

    return 0;
}
